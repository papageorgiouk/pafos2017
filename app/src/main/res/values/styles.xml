<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/splash</item>

    </style>

    <style name="AppTheme.Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="AppTheme.Schedule" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="colorControlHighlight">@color/primary_light</item>
    </style>

    <style name="AppTheme.EventView" parent="AppTheme.NoActionBar">

    </style>

    <style name="AppTheme.Explore" parent="AppTheme.NoActionBar">

    </style>

    <style name="AppTheme.Translucent.GoogleSignIn">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.Intro" parent="AppTheme">
        <item name="android:windowBackground">@color/colorAlex</item>
    </style>

    <style name="AppTheme.NavigationView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="TextAppearance.DialogTitle" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


    <style name="AppTheme.SettingsView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AboutView" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionBarStyle">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.FeedBack" parent="AppTheme.Translucent">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="AppTheme.Translucent.ImageViewer" parent="AppTheme.Translucent">
        <item name="android:background">#aa000000</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="AppTheme.CollapsingToolbar.Expanded" parent="TextAppearance.AppCompat.Display1">
        <item name="background">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.CollapsingToolbar.Collapsed" parent="TextAppearance.AppCompat.Display2">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary</item>
        <item name="background">@color/primary</item>
    </style>
    
    <style name="AppTheme.Social" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/social_background</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

</resources>
